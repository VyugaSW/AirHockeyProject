<Window x:Class="AirHockeyProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirHockeyProject"
        mc:Ignorable="d"
        Title="AirHockey" Height="480" Width="520">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Canvas Grid.Row="1"  Background="AliceBlue">
            <Ellipse x:Name="ellipseButton" Fill="Blue" Width="40" Height="40" MouseLeftButtonDown="EllipseButton_MouseLeftButtonDown"/>
        </Canvas>

        <TextBlock Grid.Row="0" Text="Click the blue ellipse to start playing" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="25" FontWeight="DemiBold" Foreground="BlueViolet"/>
    </Grid>
</Window>
